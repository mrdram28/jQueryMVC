<div id="employeesTableContainer" class="container-fluid bg-grey">
      <h1>Employees</h1>
      <div class="row">
        <div class="col-sm-4">Employees table with all records</div>
        <div class="col-sm-8">
          <div class="btn-group pull-right">
            <a href="#" class="btn btn-primary">Export</a>
            <a href="#" id="add-new" class="btn btn-default">Add New</a>
          </div>       
        </div>
        
      </div>

      <div id="employee-table">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Firstname</th>
              <th>Lastname</th>
              <th>Employee Number</th>
            </tr>
          </thead>
          <tbody>
            {{#each employees}}
                <tr>
                  <td>{{firstName}}</td>
                  <td>{{lastName}}</td>
                  <td>{{empNumber}}</td>
                </tr>
            {{/each}}
          </tbody>
        </table>
      </div>


    </div>